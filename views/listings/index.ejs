<% layout("layouts/boilerplate") -%>

  <body class="bg-light">
    <div class="container mt-5">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="mb-0">
          <p>Over 1'000 home's</p>
        </div>
        <a href="/listings/new" class="btn btn-primary">Become a host</a>
      </div>

      <!-- Listings Grid -->
      <div class="row g-4">
        <% for(let listing of allListings) { %>
          <div class="col-md-4 col-sm-6">
            <div class="card shadow-sm h-100">
              <img src="<%= listing.image?.url || listing.imageUrl %>" 
 class="card-img-top" alt="<%= listing.title %>"
                style="height: 200px; width: 100%; object-fit: cover; object-position: top;" />
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">
                  <%= listing.title %>
                </h5>
                <p class="card-text text-muted mb-3">
                  <strong>Price:</strong> &#8377;<%= listing.price %><br>
                    <strong>Location:</strong>
                    <%= listing.location %>, <%= listing.country %>
                </p>
                <a href="/listings/<%= listing._id %>" class="btn btn-outline-primary mt-auto">
                  View Details
                </a>
              </div>
            </div>
          </div>
          <% } %>
      </div>